<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lq.com.mymedia.activity.MainActivity">

    <FrameLayout
        android:id="@+id/fl_main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:id="@+id/rg_button_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp">

        <RadioButton
            android:id="@+id/rb_video"
            style="@style/button_tag_style"
            android:drawableTop="@drawable/rb_video_drawable_selector"
            android:text="本地视频" />

        <RadioButton
            android:id="@+id/rb_audio"
            style="@style/button_tag_style"
            android:drawableTop="@drawable/rb_audio_drawable_selector"
            android:text="本地音频" />

        <RadioButton
            android:id="@+id/rb_video_net"
            style="@style/button_tag_style"
            android:drawableTop="@drawable/rb_net_video_drawable_selector"
            android:text="网络视频" />

        <RadioButton
            android:id="@+id/rb_audio_net"
            style="@style/button_tag_style"
            android:drawableTop="@drawable/rb_net_audio_drawable_selector"
            android:text="网络音乐" />
    </RadioGroup>

</LinearLayout>
